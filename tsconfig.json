{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"target": "es5",
		"sourceMap": true,
		"experimentalDecorators": true,
		"declaration": true,
		"noImplicitReturns": true,
		"baseUrl": "./src",
		"outDir": "dist",
		"typeRoots": [
			"typings",
			"node_modules/@types"
		]
	},
	"exclude": [
		"node_modules"
	]
}